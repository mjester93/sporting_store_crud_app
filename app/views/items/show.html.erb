<h1><%= @item.name %></h1>

<h2>Details</h2>
<ul>
    <li>Name: <%= @item.name %></li>
    <li>Price: <%= @item.price %></li>
    <li>Sport: <%= @item.sport %></li>
    <li>Stores:
        <ul>
            <% @item.stores.each do |store| %>
                <li><%= link_to store.name, store_path(store.id) %></li>
            <% end %>
        </ul>
    </li>
</ul>
<br>
<div>
<%= link_to "Go back to all items", items_path %>
<%= link_to "Edit this item",  edit_item_path %>
<%= link_to "Add Jersey to a store",  new_store_path%>
</div>